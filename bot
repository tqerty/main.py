import telebot
from telebot.types import InlineKeyboardMarkup, InlineKeyboardButton

bot = telebot.TeleBot('8249972320:AAHWFM3omQCjOJhUKZCrnIYMWMHB90tZ-CU')



def gen_markup():
    markup = InlineKeyboardMarkup()
    markup.add(InlineKeyboardButton('–ü–ª–∞—Å—Ç–∏–∫', callback_data = '–ü–ª–∞—Å—Ç–∏–∫'),
               InlineKeyboardButton('–ë—É–º–∞–≥–∞', callback_data = '–ë—É–º–∞–≥–∞'), 
               InlineKeyboardButton('–°—Ç–µ–∫–ª–æ', callback_data = '–°—Ç–µ–∫–ª–æ'))
    return markup

@bot.callback_query_handler(func=lambda call: True)
def callback_query(call):
    if call.data == "–ü–ª–∞—Å—Ç–∏–∫":
        bot.reply_to(call.message, "–¥–æ 100 –ª–µ—Ç((ü´©))")
    elif call.data == '–ë—É–º–∞–≥–∞':
        bot.reply_to(call.message, '–æ—Ç –º–µ—Å—è—Ü–∞ –¥–æ 2 –ª–µ—Ç')

    elif call.data == '–°—Ç–µ–∫–ª–æ':
        bot.reply_to(call.message, '–º–∏–ª–ª–∏–æ–Ω –ª–µ—Ç')
    


@bot.message_handler(commands = ['start'])
def start(message):
    bot.reply_to(message, '–ü—Ä–∏–≤–µ—Ç! –Ø –±–æ—Ç - —ç–∫–æ–ª–æ–≥–∏—è, –º–æ—è –∑–∞–¥–∞—á–∞ —Ç–µ–±–µ –ø–æ–º–æ—á—å —Ä–∞–∑–æ–±—Ä–∞—Ç—å—Å—è —Å–∫–æ–ª—å–∫–æ –ø–æ –≤—Ä–µ–º–µ–Ω–∏ —Ä–∞–∑–ª–∞–≥–∞–µ—Ç—Å—è —Ç–æ—Ç –∏–ª–∏ –∏–Ω–æ–π –ø—Ä–µ–¥–º–µ—Ç')


@bot.message_handler(commands = ['info'])
def info(message):
    bot.reply_to(message, '–í—ã–±–µ—Ä–∏—Ç–µ: ', reply_markup = gen_markup())



bot.polling()
