import telebot
from bot_logic import motivation
bot = telebot.TeleBot("")
    
@bot.message_handler(commands=['start'])
def send_welcome(message):
    bot.reply_to(message, "–ü—Ä–∏–≤–µ—Ç! –Ø —Ç–≤–æ–π Telegram –±–æ—Ç. –ù–∞–ø–∏—à–∏ —á—Ç–æ-–Ω–∏–±—É–¥—å!")
    
@bot.message_handler(commands=['hello'])
def send_hello(message):
    bot.reply_to(message, "–ü—Ä–∏–≤–µ—Ç! –ö–∞–∫ –¥–µ–ª–∞?")
    
@bot.message_handler(commands=['bye'])
def send_bye(message):
    bot.reply_to(message, "–ü–æ–∫–∞! –£–¥–∞—á–∏!")

@bot.message_handler(commands = ['about'])
def send_about(message):
    bot.reply_to(message, '–†–∞–∑—Ä–∞–±: –ù–≥—É–µ–Ω –¢–æ–º, 14 –ª–µ—Ç, –±–æ—Ç –±—ã–ª —Å–æ–∑–¥–∞–Ω —Ä–∞–∑—Ä–∞–±–æ—Ç—á–∏–∫–æ–º 27.12.2025')

@bot.message_handler(commands = ['–º–æ—Ç–∏–≤–∞—Ü–∏—è'])
def give_motivation(message):
    bot.reply_to(message, motivation())

@bot.message_handler(commands = ['video'])
def send_video(message):
    f = open('till i collapse.mp4', 'rb')
    bot.send_video(message.chat.id, f)
    f.close()

@bot.message_handler(commands = ['audio'])
def send_audio(message):
    with open('Ledy GaGa - Bed Romance.mp3', 'rb') as file:
        bot.send_audio(message.chat.id, file)




@bot.message_handler(func=lambda message: True)
def echo_all(message):
    answer = message.text
    if message.text.lower() in '—Å—É–∫–∞–±–ª—è—Ç—å—Ö—É–π—Å—ã–Ω—à–ª—é—Ö–∏–¥–∞—É–Ω–∞—É—Ç–∏—Å—Ç–µ–±–ª–∞–Ω–µ–±–æ–±–æ–∫–æ—Ç–∞–∫–±–∞—Å–¥–æ–ª–±–∞–µ–±–∏–¥–∏–æ—Ç—Ç—É–ø–æ–π':
        answer = '–ù–µ –º–∞—Ç–µ—Ä–∏—Ç—å—Å—è –∏ –Ω–µ —Ä—É–≥–∞—Ç—å—Å—è! –ë—É–¥—å—Ç–µ –ø—Ä–∏–ª–∏—á–Ω—ã–º–∏üòá'
    bot.reply_to(message, answer)
    
    
bot.polling()





